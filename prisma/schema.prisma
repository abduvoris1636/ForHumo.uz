generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  nickname  String   @unique
  createdAt DateTime @default(now())

  teams     TeamMember[]
  ownedTeams Team[]
  sentRequests JoinRequest[]
  role      UserRole @default(USER)
}

model PlayerProfile {
  id          String   @id @default(cuid())
  nickname    String   @unique
  firstName   String
  lastName    String
  telegram    String
  avatar      String?
  
  level       Int      @default(1)
  gamesPlayed Int      @default(0)
  isActive    Boolean  @default(false)
  joinedAt    DateTime @default(now())
  
  mlbbInfo    Json?
  pubgInfo    Json?
}

model Team {
  id        String   @id @default(cuid())
  name      String
  tag       String   @unique
  logo      String?
  createdAt DateTime @default(now())
  
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])

  members       TeamMember[]
  requests      JoinRequest[]
  invites       TeamInvite[]
  tournaments   TournamentTeam[]
}

model TeamInvite {
  id        String   @id @default(cuid())
  code      String   @unique
  teamId    String
  createdBy String
  expiresAt DateTime?
  maxUses   Int      @default(1)
  usedCount Int      @default(0)
  createdAt DateTime @default(now())

  team Team @relation(fields: [teamId], references: [id])
}

model TeamMember {
  id        String   @id @default(cuid())
  role      TeamRole
  joinedAt  DateTime @default(now())

  userId    String
  teamId    String

  user      User @relation(fields: [userId], references: [id])
  team      Team @relation(fields: [teamId], references: [id])

  @@unique([userId, teamId])
}

enum TeamRole {
  OWNER
  CAPTAIN
  MEMBER
}

model JoinRequest {
  id        String            @id @default(cuid())
  userId    String
  teamId    String
  status    JoinRequestStatus @default(PENDING)
  createdAt DateTime          @default(now())

  user User @relation(fields: [userId], references: [id])
  team Team @relation(fields: [teamId], references: [id])

  @@unique([userId, teamId])
}

enum JoinRequestStatus {
  PENDING
  ACCEPTED
  REJECTED
}

enum UserRole {
  USER
  ADMIN
}

model Tournament {
  id          String           @id @default(cuid())
  name        String
  slug        String           @unique
  season      String
  game        String
  prizePool   Int
  maxTeams    Int
  status      TournamentStatus @default(UPCOMING)
  startDate   DateTime
  endDate     DateTime?
  createdAt   DateTime         @default(now())

  teams       TournamentTeam[]
  matches     TournamentMatch[]
  standings   TournamentStanding[]
}

model TournamentTeam {
  id            String     @id @default(cuid())
  tournamentId  String
  teamId        String
  registeredAt  DateTime   @default(now())
  
  snapshotName  String
  snapshotLogo  String?

  tournament    Tournament @relation(fields: [tournamentId], references: [id])
  team          Team       @relation(fields: [teamId], references: [id])

  matchesAsA    TournamentMatch[] @relation("TeamA")
  matchesAsB    TournamentMatch[] @relation("TeamB")
  matchesWon    TournamentMatch[] @relation("Winner")
  standings     TournamentStanding[]

  @@unique([tournamentId, teamId])
}

model TournamentMatch {
  id          String   @id @default(cuid())
  matchNumber Int
  stage       String
  date        DateTime
  time        String

  tournamentId String
  tournament   Tournament @relation(fields: [tournamentId], references: [id])

  teamAId     String
  teamA       TournamentTeam @relation("TeamA", fields: [teamAId], references: [id])

  teamBId     String
  teamB       TournamentTeam @relation("TeamB", fields: [teamBId], references: [id])

  scoreA      Int?
  scoreB      Int?

  winnerId    String?
  winner      TournamentTeam? @relation("Winner", fields: [winnerId], references: [id])

  status      String
  youtubeUrl  String?
  adminNote   String?
}

model TournamentStanding {
  id          String   @id @default(cuid())
  position    Int
  prize       Int
  proofUrl    String?
  
  tournamentId String
  tournament   Tournament @relation(fields: [tournamentId], references: [id])

  teamId      String
  team        TournamentTeam @relation(fields: [teamId], references: [id])
}

enum TournamentStatus {
  UPCOMING
  LIVE
  COMPLETED
  CANCELLED
}
